<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>

   <div class="wrapper">
        <div class="sidebar">
            <h2>Study Helper</h2>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/session">Add New Session</a></li>
                <li><a href="/sessions">View Sessions</a></li>
                <li><a href="/goal">Add New Goal</a></li>
                <li><a href="/goals">View  Goals</a></li>
            </ul>
            <div class="profile">
            <a href="/">Profile</a>
            </div>
        </div>
    </div>

    <header>
        <h1>{{.HeaderText}}</h1>
    </header>

    {{ if not .GoalList }}
        <p>No feedback entries available.</p>
    {{ else }}
        <table>
            <tr>
                <th>Goal</th>
                <th>Target Date</th>
                <th>Is Completed</th>
                <th>Actions</th>
            </tr>
            {{ range .GoalList }}
            <tr>
                <td>{{ .Goal_text }}</td>
                <td>{{ .Target_date.Format "2006-01-02" }}</td>
                <td>{{ if .Is_completed }}Yes{{ else }}No{{ end }}</td>
                <td>
                <a href="/goals/edit">
                    <button class="edit-btn">Edit</button>
                </a>
                <form method="POST" action="/goals/delete">
                    <input type="hidden" name="goal_id" value="{{ .Goal_id }}">
                    <button type="submit" class="delete-btn">Delete</button>
                </form>
                </td>
            </tr>
            {{ end }}
        </table>
    {{ end }}

        
</body>
</html>