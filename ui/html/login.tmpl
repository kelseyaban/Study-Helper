<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="/static/css/login_style.css">
</head>
<body>

    <div class="login-container">
        <h1>{{ .HeaderText }}</h1>
        <form action="/home" method="POST">
            <div class="form-group">
                <label>Username:</label>
                <input type="text" id="username" name="username" placeholder="Your username" value="{{index .FormData "username"}}" 
                       class="{{if .FormErrors.username}}invalid{{end}}">
                {{with .FormErrors.username}}
                    <div class="error">{{.}}</div>
                {{end}}
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="email" id="email" name="email" placeholder="your.email@example.com" 
                       value="{{index .FormData "email"}}"
                       class="{{if .FormErrors.email}}invalid{{end}}">
                {{with .FormErrors.email}}
                    <div class="error">{{.}}</div>
                {{end}}
            </div>

            <div class="form-group">
                <label>Password:</label>
                <input type="password_hash" id="password_hash" name="password_hash" placeholder="Enter your Password" 
                       value="{{index .FormData "password_hash"}}"
                       class="{{if .FormErrors.password_hash}}invalid{{end}}">
                {{with .FormErrors.password_hash}}
                    <div class="error">{{.}}</div>
                {{end}}
            </div>

            <div class="form-group">     
                <button type="submit">Login</button>
            </div>

        </form>
    </div>

</body>
</html>